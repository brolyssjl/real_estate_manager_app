<div class="valign-wrapper row login-box">
  <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4 pd-25">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col s12" }) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'email', class: 'validate' %>
          <%= f.label :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password' %>
          <%= f.label :password %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
        <p>
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
          <% end %>
        </p>
        <!--<div class="row">
          <div class="input-field col s12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>-->
      <% end -%>
      <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          Log in
          <i class="material-icons right">send</i>
        </button>
        <!--<div class="actions">
          <%# f.submit "Log in" %>
        </div>-->
      </div>
      <div class="row">
        <div class="col s12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>